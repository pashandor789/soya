@startuml er diagram

class task as "Task" << (T,white) >> {
    +id : int
    +user_id : int
    +title : varchar
    +status : varchar
    +description : text
}

class like as "Like" << (T,white) >> {
    +id : int
    +user_id : int
    +task_id : int
}

class commentary as "Commentary" << (T,white) >> {
    +id : int
    +task_id : int
    +parent_id : int
    +user_id : int
    +text : text
}

class client as "Client" << (T,white) >> {
    +id : int
    +password : varchar
    +username : varchar
    +email : varchar
}

class stats as "Stats" << (T,white) >> {
    +id : int
    +task_id : int
    +views : int
    +likes : int
}

client --|{ task : "fk"
task --|{ stats : "fk"
client --|{ commentary : "fk"
task --|{ like : "fk"
client --|{ like : "fk"
task --|{ commentary : "fk"

@enduml
